@font-face {
  font-family: 'Abside';
  src: url('./assets/fonts/Abside-Round2.otf') format('opentype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'CrimsonPro';
  src: url('./assets/fonts/CrimsonPro-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Blue';
  src: url('./assets/fonts/Blue.otf') format('opentype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Roboto';
  src: url('./assets/fonts/Roboto-Medium.ttf') format('truetype');
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: 'Caladea';
  src: url('./assets/fonts/Caladea-Bold.ttf') format('truetype');
  font-weight: bold;
  font-style: normal;
}

:root {
  --bg-cream: #f9f1e8;
  --text-brown: #5c4a33;
  --accent-lime: #d4ff00;
  --bg-paper: url('./assets/paper-bg.png');

  --font-logo: 'Abside', sans-serif;
  --font-menu: 'Roboto', sans-serif;
  --font-body: 'CrimsonPro', serif;
  --font-accent: 'Blue', cursive;
  --font-heading-classic: 'Caladea', serif;

  --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

html {
  scroll-behavior: smooth;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: var(--font-body);
  background-color: var(--bg-cream);
  color: var(--text-brown);
  background-image: var(--bg-paper);
  background-size: cover;
  /* Retained from original */
  background-attachment: fixed;
  font-size: 1.1rem;
  /* Retained from original */
  line-height: 1.6;
  /* Retained from original */
  overflow-x: hidden;
}

body.body-locked {
  overflow: hidden;
}

h1,
h2,
h3,
.logo {
  font-family: var(--font-logo);
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

h4,
h5,
h6,
blockquote {
  font-family: var(--font-heading-classic);
}

.logo-link {
  display: block;
  height: 40px;
}

.brand-logo {
  height: 100%;
  width: auto;
  filter: brightness(0.6);
  /* Adjusting to match the brown text color if needed */
}

a {
  color: inherit;
  text-decoration: none;
  transition: var(--transition-smooth);
}

.neon-underline {
  position: relative;
  display: inline-block;
}

.neon-underline::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -5px;
  width: 100%;
  height: 8px;
  background-color: var(--accent-lime);
  z-index: -1;
  transform: scaleX(0);
  transform-origin: left;
  transition: var(--transition-smooth);
}

.neon-underline:hover::after,
.neon-underline.active::after {
  transform: scaleX(1);
}

button {
  cursor: pointer;
  border: none;
  background: none;
  font-family: inherit;
}

img {
  max-width: 100%;
  height: auto;
  display: block;
}

.container {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 2rem;
}

@media (max-width: 768px) {
  .logo {
    font-size: 1.8rem;
  }
}

/* Navbar */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  z-index: 1000;
  background: transparent;
}

.nav-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menu-toggle {
  font-family: var(--font-menu);
  font-weight: 400;
  font-size: 1rem;
  letter-spacing: 0.05em;
  color: var(--text-brown);
}

.search-btn {
  color: var(--text-brown);
  opacity: 0.6;
}

/* Menu Overlay */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: var(--bg-cream);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s ease, visibility 0.4s ease;
  pointer-events: none;
}

.menu-overlay.open {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.menu-close {
  position: absolute;
  top: 2rem;
  right: 2rem;
  color: var(--text-brown);
  background: none;
  border: none;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.menu-close:hover {
  opacity: 0.7;
}

.overlay-nav {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.overlay-nav a {
  font-family: var(--font-logo);
  font-size: clamp(3rem, 10vw, 8rem);
  font-weight: 700;
  line-height: 1;
  color: var(--text-brown);
}

/* Hero Section */
.hero {
  position: relative;
  height: 100vh;
  width: 100vw;
  margin-bottom: 0;
  overflow: hidden;
}

.hero-container {
  position: relative;
  height: 100%;
  width: 100%;
  padding: 0;
  max-width: none;
}

.hero-image-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1.5s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.hero-slide.active {
  opacity: 1;
  z-index: 2;
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-with-text {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.hero-content {
  color: var(--accent-lime);
  position: absolute;
  bottom: 5rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 15;
  pointer-events: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 0 2rem;
  text-align: center;
  width: 100%;
}

.hero-logo {
  width: 350px;
  max-width: 80vw;
  height: auto;
  filter: brightness(0) invert(1);
  margin-bottom: 0.5rem;
}

.hero-content h1,
.hero-title {
  font-size: 0.9rem;
  color: var(--accent-lime);
  letter-spacing: 0.2em;
  font-weight: 500;
  max-width: 800px;
  text-transform: uppercase;
  opacity: 0.9;
}

.hero-subtitle {
  font-family: var(--font-body);
  font-size: 0.75rem;
  letter-spacing: 0.05em;
  margin-top: 0;
  max-width: 500px;
  opacity: 0.7;
}

/* Hero Gallery Navigation */
.hero-nav {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 20;
}

.nav-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(5px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  transition: var(--transition-smooth);
  cursor: pointer;
  opacity: 0.4;
}

.nav-btn:hover {
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-50%) scale(1.05);
  opacity: 1;
}

.nav-btn.prev {
  left: 2rem;
}

.nav-btn.next {
  right: 2rem;
}

.hero-dots {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.8rem;
  pointer-events: auto;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: var(--transition-smooth);
}

.dot.active {
  background: var(--accent-lime);
  width: 24px;
  border-radius: 4px;
}

@media (max-width: 768px) {
  .hero-image-wrapper {
    height: 400px;
  }

  .hero-with-text {
    height: 80vh;
  }

  .hero-logo {
    width: 200px;
  }

  .hero-title {
    font-size: 1.2rem;
  }

  .nav-btn {
    width: 40px;
    height: 40px;
  }

  .nav-btn.prev {
    left: 1rem;
  }

  .nav-btn.next {
    right: 1rem;
  }
}


/* Content Grid */
.content-grid {
  margin: 6rem 0;
}

.grid-inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: flex-start;
}

.content-grid.reversed .grid-inner {
  direction: rtl;
}

.content-grid.reversed .grid-inner>* {
  direction: ltr;
}

.grid-image {
  height: 100%;
}

.grid-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 4px;
}

.grid-text {
  padding: 2rem 0;
}

.text-content p {
  margin-bottom: 2rem;
  max-width: 500px;
}

@media (max-width: 992px) {
  .grid-inner {
    grid-template-columns: 1fr;
    gap: 4rem;
  }
}

/* Brand Decoration */
.brand-decoration {
  display: flex;
  justify-content: center;
  padding: 4rem 0;
}

.illustration-main {
  max-width: 200px;
  margin: 0 auto;
  opacity: 0.8;
}

/* Gallery Section */
.gallery-section {
  padding: 6rem 0;
  background-color: rgba(92, 74, 51, 0.05);
  margin-top: 4rem;
}

.gallery-title {
  text-align: center;
  margin-bottom: 4rem;
  font-size: 3rem;
  color: var(--text-brown);
  font-family: var(--font-logo);
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
}

.gallery-item {
  position: relative;
  overflow: hidden;
  border-radius: 4px;
  aspect-ratio: 1 / 1;
}

.gallery-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.gallery-item:hover img {
  transform: scale(1.05);
}

@media (max-width: 768px) {
  .gallery-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  }
}

/* About Section */
.about-section {
  padding: 8rem 0;
}

.about-grid {
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 4rem;
  align-items: center;
}

.section-title {
  font-size: 4rem;
  margin-bottom: 2rem;
  color: var(--text-brown);
}

.about-text p {
  margin-bottom: 1.5rem;
  font-size: 1.2rem;
}

.highlight-text {
  font-family: var(--font-accent);
  font-size: 2.5rem !important;
  color: var(--text-brown);
  margin-top: 2rem;
}

.profile-card {
  background: white;
  padding: 2rem;
  border-radius: 4px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.profile-image img {
  border-radius: 4px;
  margin-bottom: 2rem;
}

.profile-info h3 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

.profile-info .role {
  font-family: var(--font-menu);
  color: #888;
  margin-bottom: 1.5rem;
}

.profile-info .description {
  font-size: 1rem;
  margin-bottom: 1rem;
}

/* Jarupia Section */
.jarupia-section {
  padding: 6rem 0;
}

.jarupia-header {
  text-align: center;
  margin-bottom: 4rem;
}

.product-card {
  max-width: 400px;
  margin: 0 auto;
}

.product-image {
  position: relative;
  margin-bottom: 1.5rem;
}

.product-image img {
  border-radius: 4px;
}

.badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: var(--accent-lime);
  color: black;
  padding: 0.2rem 1rem;
  font-family: var(--font-menu);
  font-weight: 700;
  text-transform: uppercase;
  font-size: 0.8rem;
}

.product-info h3 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

.buy-button {
  margin-top: 1.5rem;
  padding: 1rem 2rem;
  background: var(--text-brown);
  color: white;
  font-family: var(--font-menu);
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

/* Footer */
.minimal-footer {
  background-color: #836746;
  /* Approximate brown from image */
  padding: 2.5rem 0;
  margin-top: 4rem;
}

.footer-message {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: var(--accent-lime);
  font-family: var(--font-logo);
  font-size: clamp(1.2rem, 3vw, 2.5rem);
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

@media (max-width: 768px) {
  .footer-message {
    flex-direction: column;
    gap: 1.5rem;
    font-size: 1.8rem;
    text-align: center;
  }
}

@media (max-width: 992px) {
  .about-grid {
    grid-template-columns: 1fr;
    gap: 4rem;
  }
}

/* Services Section */
.services-section {
  padding: 8rem 0;
}

.services-intro {
  font-size: 1.5rem;
  max-width: 800px;
  margin-bottom: 6rem;
  line-height: 1.4;
  color: var(--text-brown);
}

.services-grid {
  display: flex;
  flex-direction: column;
  gap: 8rem;
}

.service-card {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.service-card.reversed {
  direction: rtl;
}

.service-card.reversed .service-content {
  direction: ltr;
}

.service-image img {
  border-radius: 4px;
}

.service-content h3 {
  font-size: 1.2rem;
  font-family: var(--font-menu);
  color: #888;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  margin-bottom: 1rem;
}

.service-tagline {
  font-size: 2.5rem;
  font-family: var(--font-logo);
  line-height: 1.1;
  margin-bottom: 2rem;
  color: var(--text-brown);
}

.service-content p {
  font-size: 1.1rem;
  max-width: 500px;
  color: var(--text-brown);
  opacity: 0.8;
}

/* Differentiator & Closure */
.differentiator-section {
  padding: 10rem 0;
  text-align: center;
}

.differentiator-box {
  border: 1px solid var(--text-brown);
  padding: 4rem;
  display: inline-block;
  max-width: 800px;
}

.differentiator-box h2 {
  font-size: 3rem;
  margin-bottom: 1rem;
  font-family: var(--font-logo);
  color: var(--text-brown);
}

.differentiator-box p {
  font-size: 1.5rem;
  color: var(--text-brown);
}

.closure-section {
  padding: 8rem 0;
  text-align: center;
  background-color: var(--accent-lime);
  margin: 4rem 0;
}

.closure-text {
  font-family: var(--font-accent);
  font-size: 4rem;
  color: var(--text-brown);
}

@media (max-width: 768px) {
  .service-card {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .service-card.reversed {
    direction: ltr;
  }

  .service-tagline {
    font-size: 2rem;
  }

  .closure-text {
    font-size: 2.5rem;
  }
}

/* Jarupia Page Specific Styles */
.jarupia-page {
  padding-top: 80px;
  /* Offset for fixed navbar */
  min-height: 100vh;
}

.jarupia-hero {
  padding: 4rem 0;
  border-bottom: 1px solid rgba(92, 74, 51, 0.1);
}

.back-link {
  display: inline-block;
  margin-bottom: 2rem;
  font-family: var(--font-menu);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  opacity: 0.6;
}

.back-link:hover {
  opacity: 1;
}

.jarupia-hero-content {
  text-align: left;
}

.jarupia-hero-content .lead {
  font-size: 2rem;
  font-family: var(--font-accent);
  margin-top: -0.5rem;
}

.details-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 6rem;
  padding: 6rem 0;
  align-items: flex-start;
}

.details-image-main img {
  width: 100%;
  border-radius: 4px;
  box-shadow: 0 40px 100px rgba(0, 0, 0, 0.1);
}

.details-text h2 {
  font-size: 2.5rem;
  margin-bottom: 2rem;
  line-height: 1.1;
}

.details-text p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.8;
}

.spec-box {
  background: rgba(255, 255, 255, 0.5);
  padding: 2rem;
  border-radius: 4px;
  margin-bottom: 3rem;
  font-size: 1rem;
}

.spec-box p {
  margin-bottom: 0.5rem;
  font-size: 1rem;
}

.purchase-card {
  border: 1px solid var(--text-brown);
  padding: 3rem;
  border-radius: 4px;
  text-align: center;
}

.purchase-card h3 {
  margin-bottom: 1rem;
}

.purchase-card .price {
  font-size: 2rem;
  font-family: var(--font-heading-classic);
  color: var(--text-brown);
  margin-bottom: 0.5rem;
  opacity: 1;
}

.cta-button {
  display: inline-block;
  margin-top: 2rem;
  padding: 1.2rem 3rem;
  background: var(--text-brown);
  color: white;
  font-family: var(--font-menu);
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-weight: 700;
  transition: var(--transition-smooth);
}

.cta-button:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.jarupia-gallery {
  padding: 8rem 0;
  background-color: rgba(92, 74, 51, 0.03);
}

.inner-gallery {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-top: 4rem;
}

.gallery-column {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.gallery-column img {
  border-radius: 4px;
  width: 100%;
}

.jarupia-conclusion {
  padding: 10rem 0;
}

.text-center {
  text-align: center;
}

@media (max-width: 992px) {
  .details-grid {
    grid-template-columns: 1fr;
    gap: 4rem;
  }
}

@media (max-width: 768px) {
  .inner-gallery {
    grid-template-columns: 1fr;
  }

  .jarupia-hero-content .lead {
    font-size: 1.5rem;
  }
}
